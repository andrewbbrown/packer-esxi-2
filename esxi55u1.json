{
  "builders": [
    {
      "type": "vmware-iso",
      "headless": true,
      "vm_name": "esxi55u1",
      "vmdk_name": "esxi55u1",
      "disk_type_id": "0",
      "boot_command": [
        "O<wait>",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "15s",
      "disk_size": 20480,
      "guest_os_type": "vmkernel5",
      "http_directory": "kickstart",
      "iso_checksum": "75c913bebf669b8def8c066168a63619d8dff87f9c4e31b6c03365b101602e8d",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/VMware-VMvisor-Installer-5.5.0.update01-1623387.x86_64.iso"
      ],
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "15m",
      "shutdown_command": "/bin/halt",
      "vmx_data": {
        "memsize": "4096",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "2",
        "vhv.enable": "TRUE",
        "RemoteDisplay.vnc.webSocket.port": "6550"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/esxi55.sh"
      ]
    },
    {
      "type": "file",
      "source": "scripts/local.sh",
      "destination": "/etc/rc.local.d/local.sh"
    },
    {
      "type": "file",
      "source": "publickey/vagrant.pub",
      "destination": "/etc/ssh/keys-root/authorized_keys"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.Provider}}/esxi55u1.box"
    }
  ]
}
